{
  "compilerOptions": {
    "module": "es6",
    "declaration": true,
    "noImplicitAny": false,
    "target": "es6",
    "moduleResolution": "Node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*", "src/server/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}