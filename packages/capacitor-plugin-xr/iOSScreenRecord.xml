<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-replay" version="0.0.4" xmlns="http://apache.org/cordova/ns/plugins/1.0">
    <name>ScreenRecord</name>
    <description>This cordova plugin allows to use the ReplayKit framework in iOS</description>
    <keywords>cordova,replaykit,screen recording</keywords>
    <license>MIT</license>
    <repo>https://github.com/kaelhem/cordova-replay.git</repo>

    <engines>
        <engine name="cordova-ios" version=">=3.8.0" />
    </engines>

    <js-module name="ScreenRecord" src="www/ScreenRecord.js">
        <clobbers target="com.xr3ngine.screenrecord"/>
    </js-module>

    <platform name="ios">
        <hook type="after_plugin_add" src="hooks/setswiftversion.js" />
        <config-file parent="/*" target="config.xml">
            <feature name="ScreenRecord">
                <param name="ios-package" value="ScreenRecord"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>
        <header-file src="src/ios/screenrecord-Bridging-Header.h"/>
        <source-file src="src/ios/ScreenRecord.swift"/>
        <framework src="ReplayKit.framework" />
        <framework src="UIKit.framework" />
    </platform>
</plugin>