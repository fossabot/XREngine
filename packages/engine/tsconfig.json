{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "esnext",
    "declaration": true,
    "noImplicitAny": false,
    "target": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitThis": true,
    "skipLibCheck": true
  },

  "include": ["src/**/*", "../client-core/src/ml", "../gameserver/src/transports/WebRtcTransportParams.ts", "../client-core/transports/SocketWebRTCClientFunctions.ts", "../client-core/transports/SocketWebRTCClientTransport.ts"],
  "exclude": ["node_modules", "dist", "tsconfig.json"]
}

