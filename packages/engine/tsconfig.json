{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "esnext",
    "declaration": true,
    "noImplicitAny": false,
    "target": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "tsconfig.json", "tests/"]
}