{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "esnext",
    "declaration": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tsconfig.json"]
}