{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "es2015",
    "declaration": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "target": "es2019",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["src/**/*", "sandbox/vehicles/car", "sandbox/car", "sandbox/AudioStore.ts"],
  "exclude": ["node_modules", "dist", "tsconfig.json"]
}